{
  "compilerOptions": {
    "declaration": true,
    "module": "es2022",
    "target": "es2021",
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist/*", "types"]
}
